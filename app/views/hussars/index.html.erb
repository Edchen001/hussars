<p id="notice"><%= notice %></p>

<h1>Listing Hussars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Born</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hussars.each do |hussar| %>
      <tr>
        <td><%= hussar.name %></td>
        <td><%= hussar.born %></td>
        <td><%= link_to 'Show', hussar %></td>
        <td><%= link_to 'Edit', edit_hussar_path(hussar) %></td>
        <td><%= link_to 'Destroy', hussar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

